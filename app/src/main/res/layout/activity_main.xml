<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="end"
        android:textSize="30sp"
        android:inputType="none"
        android:background="#FFFFFF"
        android:padding="10dp"/>

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:text="7" style="@style/btnStyle"/>
        <Button android:text="8" style="@style/btnStyle"/>
        <Button android:text="9" style="@style/btnStyle"/>
        <Button android:text="÷" style="@style/btnStyle"/>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:text="4" style="@style/btnStyle"/>
        <Button android:text="5" style="@style/btnStyle"/>
        <Button android:text="6" style="@style/btnStyle"/>
        <Button android:text="×" style="@style/btnStyle"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:text="1" style="@style/btnStyle"/>
        <Button android:text="2" style="@style/btnStyle"/>
        <Button android:text="3" style="@style/btnStyle"/>
        <Button android:text="−" style="@style/btnStyle"/>
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:text="AC" style="@style/btnStyle"/>
        <Button android:text="0" style="@style/btnStyle"/>
        <Button android:text="=" style="@style/btnStyle"/>
        <Button android:text="+" style="@style/btnStyle"/>
    </LinearLayout>

</LinearLayout>