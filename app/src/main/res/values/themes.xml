        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="equalStyle" parent="btnStyle">
        <item name="android:backgroundTint">#1E88E5</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="clearStyle" parent="btnStyle">
        <item name="android:backgroundTint">#EF5350</item>
